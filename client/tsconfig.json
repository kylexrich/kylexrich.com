{
  "compilerOptions": {
    "esModuleInterop": true,
    "skipLibCheck": true,
    "target": "es2022",
    "allowJs": true,
    "resolveJsonModule": true,
    "moduleDetection": "force",
    "isolatedModules": true,
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "module": "nodenext",
    "outDir": "dist",
    "sourceMap": true,
    "lib": [
      "es2022",
      "dom",
      "dom.iterable"
    ],
    "jsx": "react-jsx",
    "typeRoots": [
      "./src/@types",
      "./node_modules/@types"
    ],
    "allowImportingTsExtensions": true,
    "noEmit": true
  }
}
