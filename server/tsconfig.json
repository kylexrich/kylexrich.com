{
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "express": ["node_modules/@types/express"],
      "cors": ["node_modules/@types/cors"],
      "express-fileupload": ["node_modules/@types/express-fileupload"]
    },
    "target": "es6",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "sourceMap": true,
    "types": ["node"],
    "allowSyntheticDefaultImports": true
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
